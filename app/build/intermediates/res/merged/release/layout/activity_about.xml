<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dpHeaderBg"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                tools:context="be.robinj.digitalplace.About">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dplogo"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versie onbekend"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dpTitle"
        android:typeface="monospace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/thisegzz"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dpTitle"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/robin"
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/dpTitle"
                android:singleLine="true"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/thisegzz"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/robin"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Beheerder van DigitalPlace.nl"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textColor="@color/secondary"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ontwikkelaar van deze app\nDigitalPlace.nl-lid sinds 2008"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textColor="@color/secondary"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btnDp"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dpPostBg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/url"
                android:textColor="@color/white"
                android:onClick="btnDp_clicked"
                android:layout_alignTop="@+id/btnDev"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                />

            <Button
                android:id="@+id/btnDev"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dpPostBg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/developer"
                android:textColor="@color/white"
                android:onClick="btnDev_clicked"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"/>
        </TableRow>

    </LinearLayout>
</RelativeLayout>